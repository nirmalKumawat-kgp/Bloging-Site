<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head.ejs')%>

        <body>
            <%- include('./partials/nav.ejs') %>
                <main>
                    <div class="blogs content">
                        <h2>All Blogs</h2>
                        <% if(blogs.length>0){ %>
                            <% blogs.forEach(blog=>{ %>
                                <a href="/blogs/<%= blog._id %>" class="single">
                                    <h3>
                                        <%= blog.title %>
                                    </h3>
                                    <p>
                                        <%= blog.snippet %>
                                    </p>
                                </a>
                                <% }); %>
                                    <% }else{ %>
                                        <p>Nothing to Show here.</p>
                                        <% } %>
                    </div>
                </main>
                <%- include('./partials/footer.ejs') %>
        </body>

</html>